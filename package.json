{
	"name": "anirec",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"dev:ext": "bun --filter @anirec/extension dev",
		"dev:server": "bun --filter @anirec/server dev",
		"build": "turbo run build --log-order=grouped",
		"typecheck": "turbo run typecheck --continue --log-order=grouped",
		"check": "turbo run check --continue --log-order=grouped",
		"check:dry": "turbo run check:dry --continue --log-order=grouped",
		"test": "turbo run test:run --continue --log-order=grouped"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.13",
		"tsup": "^8.3.5",
		"turbo": "^2.8.1",
		"typescript": "^5.6.3",
		"vitest": "^2.1.3"
	},
	"packageManager": "bun@1.3.8"
}
